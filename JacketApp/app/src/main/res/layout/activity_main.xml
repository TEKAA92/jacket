<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--suppress AndroidDomInspection -->

    <fragment
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"

        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:id="@+id/degreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20sp"
            android:text="30 °C"
            android:textSize="20sp"
            style="@style/ShadowText"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/sensorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="60sp"
            android:text="30 °C"
            android:textSize="20sp"
            style="@style/ShadowText"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tempText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="55sp"
            android:text="Varme: "
            android:textSize="20sp"
            style="@style/ShadowText"
            android:textColor="@color/black"/>
        <SeekBar
            android:id="@+id/tempSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="45sp"
            android:layout_marginBottom="10sp"
            android:max="40"
        />
        <TextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="200sp"
            android:text="Alvorlig snøskredsfare!"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:visibility="invisible"
            style="@style/ShadowText"
            android:textColor="@color/red"/>
        <Button
            android:id="@+id/warningButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="45sp"
            android:layout_marginBottom="140sp"
            android:text="Disable alarm"
            android:visibility="invisible"
            />
    </RelativeLayout>
</RelativeLayout>
